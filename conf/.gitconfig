	name = Jakob Beckmann
	email = beckmann_jakob@hotmail.fr

[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = bat

[log]
	date = format:%Y-%m-%d %H:%M

[difftool "nvim"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"

[diff]
	submodule = log
	tool = nvim

[difftool]
	prompt = false

[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[merge]
	tool = nvim

[mergetool]
	prompt = false

# Aliases
[alias]
	f = fetch -q
	b = branch -vv
	d = difftool
	aa = add .
	a = add
	ac = commit -am
	cc = commit -m
	ca = commit --amend -C HEAD
	ce = commit --amend -m
	co = checkout
	re = reset
	s  = status -sb
	st = stash list
	sh = stash show --full-diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
	ph = push -q
	phf = push -q --force-with-lease
	pl = pull -q

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[pull]
	ff = only
	rebase = true
