#
# Use the command 'task show' to see all defaults and overrides
# See src/Context.cpp for description and default values.
#

# Files
data.location=~/.task

weekstart = Monday

confirmation = no
recurrence.confirmation = no

regex = yes

calendar.holidays = sparse

# Default due date for 'add' command
default.due = eom

dateformat = D/M

# Aliases
alias.a=add
alias.s=summary
alias.st=start
alias.l=list
alias.an=annotate
alias.m=modify
alias.d=done
alias.D=delete
alias.e=edit
alias.cal=calendar
alias.c=context

# Color theme
include ~/.config/taskwarrior/gruvbox-dark-256.theme

# Estimated time in hours
uda.estimate.type=duration
uda.estimate.label=est
uda.estimate.default=1h

# {{{ Reports
report.next.columns=id,due.relative,priority,start.age,entry,depends,scheduled.countdown,estimate,until.remaining,project,tags,description.count
report.next.labels=id,due,p,actv,crtd,deps,schdld,est,until,project,tag,descr

report.list.columns=id,project,tags,scheduled,due.relative,urgency,description
report.list.labels=id,project,tags,schdld,due,score,descr

report.simple.description=Simple list of open tasks by project
report.simple.columns=id,project,description.count
report.simple.labels=id,proj,desc
report.simple.sort=project+/,entry+
report.simple.filter=status:pending

#}}}

context.work=+work
context.home=+home

