#
# Use the command 'task show' to see all defaults and overrides
# See src/Context.cpp for description and default values.
#

# Files
data.location=~/.task

editor=nvim

weekstart = Monday

confirmation = no
recurrence.confirmation = no

regex = yes

calendar.holidays = sparse

# Default due date for 'add' command
default.due = eom

dateformat = D/M

# Aliases
alias.a=add
alias.s=summary
alias.st=start
alias.l=list
alias.an=annotate
alias.m=modify
alias.d=done
alias.D=delete
alias.e=edit
alias.cal=calendar
alias.c=context

# Color theme
include ~/.config/taskwarrior/gruvbox-dark-256.theme

# Estimated time in hours
uda.estimate.type=duration
uda.estimate.label=est
uda.estimate.default=1h

# {{{ Reports
report.next.columns=id,due.relative,priority,depends,scheduled.countdown,estimate,until.remaining,start.active,project,tags,description.count
report.next.labels=id,due,p,d,schdld,est,until,s,project,tag,descr

report.sch.description=List of scheduled tasks
report.sch.columns=id,scheduled,estimate,start.active,depends.indicator,project,description.count
report.sch.labels=id,schdld,est,s,d,proj,desc
report.sch.sort=scheduled+,project+/,entry+
report.sch.filter=status:pending

report.age.description=List of created tasks
report.age.columns=id,entry,start.active,project,description.count
report.age.labels=id,created,s,proj,desc
report.age.sort=entry+,project+/,entry+
report.age.filter=status:pending

#}}}

context.work=+work
context.home=+home

